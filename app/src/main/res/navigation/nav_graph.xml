<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/hostFragment">

    <fragment
        android:id="@+id/hostFragment"
        android:name="com.shayan.reminderstdl.ui.fragments.HostFragment"
        android:label="Host">
        <action
            android:id="@+id/hostFragment_to_splashFragment"
            app:destination="@+id/splashFragment" />
        <action
            android:id="@+id/hostFragment_to_loginFragment"
            app:destination="@+id/loginFragment" />
        <action
            android:id="@+id/hostFragment_to_newReminderFragment"
            app:destination="@+id/newReminderFragment" />
        <action
            android:id="@+id/hostFragment_to_homeFragment"
            app:destination="@+id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.shayan.reminderstdl.ui.fragments.SplashFragment"
        android:label="Splash">
        <action
            android:id="@+id/splashFragment_to_loginFragment"
            app:destination="@+id/loginFragment" />
        <action
            android:id="@+id/splashFragment_to_homeFragment"
            app:destination="@+id/homeFragment" />

    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.shayan.reminderstdl.ui.fragments.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/loginFragment_to_homeFragment"
            app:destination="@+id/homeFragment" />


    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.shayan.reminderstdl.ui.fragments.RegisterFragment"
        android:label="Register">
        <action
            android:id="@+id/registerFragment_to_loginFragment"
            app:destination="@+id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.shayan.reminderstdl.ui.fragments.HomeFragment"
        android:label="Home">
        <action
            android:id="@+id/homeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/homeFragment_to_newReminderFragment"
            app:destination="@id/newReminderFragment" />
    </fragment>

    <fragment
        android:id="@+id/newReminderFragment"
        android:name="com.shayan.reminderstdl.ui.fragments.NewReminderFragment"
        android:label="New Reminder">

    </fragment>

</navigation>