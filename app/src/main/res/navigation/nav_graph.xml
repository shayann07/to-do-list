<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/hostFragment">

    <fragment
        android:id="@+id/hostFragment"
        android:name="com.shayan.reminderstdl.ui.fragments.HostFragment"
        android:label="Host">
        <action
            android:id="@+id/hostFragment_to_loginFragment"
            app:destination="@+id/loginFragment" />
        <action
            android:id="@+id/hostFragment_to_newReminderFragment"
            app:destination="@+id/newReminderFragment" />
        <action
            android:id="@+id/hostFragment_to_homeFragment"
            app:destination="@+id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.shayan.reminderstdl.ui.fragments.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/loginFragment_to_homeFragment"
            app:destination="@+id/homeFragment" />


    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.shayan.reminderstdl.ui.fragments.RegisterFragment"
        android:label="Register">
        <action
            android:id="@+id/registerFragment_to_loginFragment"
            app:destination="@+id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.shayan.reminderstdl.ui.fragments.HomeFragment"
        android:label="Home">
        <action
            android:id="@+id/homeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/homeFragment_to_newReminderFragment"
            app:destination="@id/newReminderFragment" />
        <action
            android:id="@+id/homeFragment_to_todayFragment"
            app:destination="@+id/todayFragment" />
        <action
            android:id="@+id/homeFragment_to_scheduledFragment"
            app:destination="@+id/scheduledFragment" />
        <action
            android:id="@+id/homeFragment_to_allFragment"
            app:destination="@+id/allFragment" />
        <action
            android:id="@+id/homeFragment_to_flaggedFragment"
            app:destination="@+id/flaggedFragment" />
        <action
            android:id="@+id/homeFragment_to_completedFragment"
            app:destination="@+id/completedFragment" />
        <action
            android:id="@+id/homeFragment_to_iCloudFragment"
            app:destination="@+id/iCloudFragment" />
        <action
            android:id="@+id/homeFragment_to_outlookFragment"
            app:destination="@+id/outlookFragment" />

    </fragment>

    <fragment
        android:id="@+id/newReminderFragment"
        android:name="com.shayan.reminderstdl.ui.fragments.NewReminderFragment"
        android:label="New Reminder">
        <action
            android:id="@+id/newReminderFragment_to_homeFragment"
            app:destination="@+id/homeFragment" />

    </fragment>

    <fragment
        android:id="@+id/todayFragment"
        android:name="com.shayan.reminderstdl.ui.fragments.TodayFragment"
        android:label="Today">
        <action
            android:id="@+id/todayFragment_to_homeFragment"
            app:destination="@+id/homeFragment" />
        <action
            android:id="@+id/todayFragment_to_newReminderFragment"
            app:destination="@id/newReminderFragment" />

    </fragment>

    <fragment
        android:id="@+id/scheduledFragment"
        android:name="com.shayan.reminderstdl.ui.fragments.ScheduledFragment"
        android:label="Scheduled">
        <action
            android:id="@+id/scheduledFragment_to_homeFragment"
            app:destination="@+id/homeFragment" />

    </fragment>

    <fragment
        android:id="@+id/allFragment"
        android:name="com.shayan.reminderstdl.ui.fragments.AllFragment"
        android:label="All">
        <action
            android:id="@+id/allFragment_to_homeFragment"
            app:destination="@+id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/flaggedFragment"
        android:name="com.shayan.reminderstdl.ui.fragments.FlaggedFragment"
        android:label="Flagged">
        <action
            android:id="@+id/flaggedFragment_to_homeFragment"
            app:destination="@+id/homeFragment" />

    </fragment>

    <fragment
        android:id="@+id/completedFragment"
        android:name="com.shayan.reminderstdl.ui.fragments.CompletedFragment"
        android:label="Completed">
        <action
            android:id="@+id/completedFragment_to_homeFragment"
            app:destination="@+id/homeFragment" />

    </fragment>

    <fragment
        android:id="@+id/iCloudFragment"
        android:name="com.shayan.reminderstdl.ui.fragments.iCloudFragment"
        android:label="iCloud">
        <action
            android:id="@+id/iCloudFragment_to_homeFragment"
            app:destination="@+id/homeFragment" />

    </fragment>

    <fragment
        android:id="@+id/outlookFragment"
        android:name="com.shayan.reminderstdl.ui.fragments.OutlookFragment"
        android:label="Outlook">
        <action
            android:id="@+id/outlookFragment_to_homeFragment"
            app:destination="@+id/homeFragment" />

    </fragment>
</navigation>